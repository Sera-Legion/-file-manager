    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fileInput = document.getElementById('fileInput');
            const uploadArea = document.getElementById('uploadArea');
            const gallery = document.getElementById('gallery');
            const emptyGallery = document.getElementById('emptyGallery');
            const selectAllBtn = document.getElementById('selectAllBtn');
            const deleteSelectedBtn = document.getElementById('deleteSelectedBtn');
            
            let selectedImages = new Set();
            let images = JSON.parse(localStorage.getItem('galleryImages')) || [];
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –∏–∑ localStorage –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            loadImagesFromStorage();
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –ø–æ –æ–±–ª–∞—Å—Ç–∏ –∑–∞–≥—Ä—É–∑–∫–∏
            uploadArea.addEventListener('click', function() {
                fileInput.click();
            });
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ñ–∞–π–ª–æ–≤–æ–≥–æ –≤–≤–æ–¥–∞
            fileInput.addEventListener('change', function(e) {
                handleFiles(e.target.files);
                fileInput.value = ''; // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ input
            });
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –ø–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏—è —Ñ–∞–π–ª–æ–≤
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.classList.add('active');
            });
            
            uploadArea.addEventListener('dragleave', function() {
                uploadArea.classList.remove('active');
            });
            
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('active');
                
                if (e.dataTransfer.files.length) {
                    handleFiles(e.dataTransfer.files);
                }
            });
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
            selectAllBtn.addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('.gallery-item input[type="checkbox"]');
                const allSelected = Array.from(checkboxes).every(checkbox => checkbox.checked);
                
                checkboxes.forEach(checkbox => {
                    checkbox.checked = !allSelected;
                    toggleImageSelection(checkbox);
                });
                
                updateSelectionCount();
            });
            
            deleteSelectedBtn.addEventListener('click', function() {
                if (selectedImages.size === 0) {
                    alert('–í—ã–±–µ—Ä–∏—Ç–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è');
                    return;
                }
                
                if (confirm(`–£–¥–∞–ª–∏—Ç—å ${selectedImages.size} –≤—ã–±—Ä–∞–Ω–Ω—ã—Ö –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π?`)) {
                    // –£–¥–∞–ª—è–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –∏–∑ –º–∞—Å—Å–∏–≤–∞
                    images = images.filter(img => !selectedImages.has(img.id));
                    
                    // –°–æ—Ö—Ä–∞–Ω—è–µ–º –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤ localStorage
                    localStorage.setItem('galleryImages', JSON.stringify(images));
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –≥–∞–ª–µ—Ä–µ—é
                    loadImagesFromStorage();
                    
                    // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –≤—ã–±–æ—Ä
                    selectedImages.clear();
                    updateSelectionCount();
                }
            });
            
            // –§—É–Ω–∫—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –∑–∞–≥—Ä—É–∂–µ–Ω–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤
            function handleFiles(files) {
                if (files.length === 0) return;
                
                // –°–∫—Ä—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –æ –ø—É—Å—Ç–æ–π –≥–∞–ª–µ—Ä–µ–µ
                if (emptyGallery.style.display !== 'none') {
                    emptyGallery.style.display = 'none';
                }
                
                for (let i = 0; i < files.length; i++) {
                    const file = files[i];
                    
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ —Ñ–∞–π–ª –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ–º
                    if (!file.type.match('image.*')) continue;
                    
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        const imgData = {
                            id: Date.now() + i, // –£–Ω–∏–∫–∞–ª—å–Ω—ã–π ID
                            src: e.target.result,
                            name: file.name,
                            date: new Date().toISOString()
                        };
                        
                        // –î–æ–±–∞–≤–ª—è–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –≤ –º–∞—Å—Å–∏–≤
                        images.push(imgData);
                        
                        // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage
                        localStorage.setItem('galleryImages', JSON.stringify(images));
                        
                        // –î–æ–±–∞–≤–ª—è–µ–º –≤ –≥–∞–ª–µ—Ä–µ—é
                        addImageToGallery(imgData);
                    };
                    
                    reader.readAsDataURL(file);
                }
            }
            
            // –§—É–Ω–∫—Ü–∏—è –∑–∞–≥—Ä—É–∑–∫–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π –∏–∑ localStorage
            function loadImagesFromStorage() {
                // –û—á–∏—â–∞–µ–º –≥–∞–ª–µ—Ä–µ—é
                gallery.innerHTML = '';
                
                if (images.length === 0) {
                    emptyGallery.style.display = 'block';
                    gallery.appendChild(emptyGallery);
                    return;
                }
                
                emptyGallery.style.display = 'none';
                
                // –î–æ–±–∞–≤–ª—è–µ–º –∫–∞–∂–¥–æ–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –≤ –≥–∞–ª–µ—Ä–µ—é
                images.forEach(imgData => {
                    addImageToGallery(imgData);
                });
            }
            
            // –§—É–Ω–∫—Ü–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è –≤ –≥–∞–ª–µ—Ä–µ—é
            function addImageToGallery(imgData) {
                // –°–æ–∑–¥–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç –≥–∞–ª–µ—Ä–µ–∏
                const galleryItem = document.createElement('div');
                galleryItem.className = 'gallery-item';
                galleryItem.dataset.id = imgData.id;
                
                const img = document.createElement('img');
                img.src = imgData.src;
                img.className = 'gallery-img';
                img.alt = imgData.name;
                
                const overlay = document.createElement('div');
                overlay.className = 'gallery-overlay';
                
                const checkboxContainer = document.createElement('div');
                checkboxContainer.className = 'checkbox-container';
                
                const checkbox = document.createElement('input');
                checkbox.type = 'checkbox';
                checkbox.id = `img-${imgData.id}`;
                checkbox.addEventListener('change', function() {
                    toggleImageSelection(this);
                });
                
                const checkboxLabel = document.createElement('label');
                checkboxLabel.htmlFor = `img-${imgData.id}`;
                checkboxLabel.textContent = '–í—ã–±—Ä–∞—Ç—å';
                
                checkboxContainer.appendChild(checkbox);
                checkboxContainer.appendChild(checkboxLabel);
                
                const fileName = document.createElement('span');
                fileName.className = 'img-name';
                fileName.textContent = imgData.name.length > 15 ? 
                    imgData.name.substring(0, 15) + '...' : imgData.name;
                
                const downloadBtn = document.createElement('button');
                downloadBtn.className = 'download-btn';
                downloadBtn.textContent = '–°–∫–∞—á–∞—Ç—å';
                
                // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–∫–∞—á–∏–≤–∞–Ω–∏—è
                downloadBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    downloadImage(imgData.src, imgData.name);
                });
                
                overlay.appendChild(checkboxContainer);
                overlay.appendChild(fileName);
                overlay.appendChild(downloadBtn);
                
                galleryItem.appendChild(img);
                galleryItem.appendChild(overlay);
                
                gallery.appendChild(galleryItem);
            }
            
            // –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è –≤—ã–±–æ—Ä–∞ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
            function toggleImageSelection(checkbox) {
                const galleryItem = checkbox.closest('.gallery-item');
                const imgId = parseInt(galleryItem.dataset.id);
                
                if (checkbox.checked) {
                    selectedImages.add(imgId);
                    galleryItem.style.boxShadow = '0 0 0 3px #3498db';
                } else {
                    selectedImages.delete(imgId);
                    galleryItem.style.boxShadow = '';
                }
                
                updateSelectionCount();
            }
            
            // –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—á–µ—Ç—á–∏–∫–∞ –≤—ã–±—Ä–∞–Ω–Ω—ã—Ö –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–π
            function updateSelectionCount() {
                if (selectedImages.size > 0) {
                    deleteSelectedBtn.textContent = `–£–¥–∞–ª–∏—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–µ (${selectedImages.size})`;
                } else {
                    deleteSelectedBtn.textContent = '–£–¥–∞–ª–∏—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–µ';
                }
            }
            
            // –§—É–Ω–∫—Ü–∏—è —Å–∫–∞—á–∏–≤–∞–Ω–∏—è –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
            function downloadImage(dataUrl, fileName) {
                const link = document.createElement('a');
                link.href = dataUrl;
                link.download = fileName;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
        });
    </script>
</body>
</html>
